---
import '../styles/global.css';
import { t } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

export interface Props {
	title?: string;
  description?: string;
  image?: string;
}

const { title = 'William Hallin', description = `${t("seo.description")}`, image = '/imgs/metadata.png' } = Astro.props as Props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
<link rel="manifest" href="/favicon/site.webmanifest">
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#d0a400">
<meta name="generator" content={Astro.generator} />
<meta name="author" content="William Hallin" />
<meta name="theme-color" content="#ffc800" />
<meta name="msapplication-TileColor" content="#d0a400">

<!-- Primary Meta Tags -->
<title>{title} - whallin.me</title>
<meta name="title" content=`${title} - whallin.me` />
<meta name="description" content={description} />

<!-- Google Font Import -->
<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Spline+Sans+Mono&display=swap" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content=`${title} - whallin.me` />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:image:alt" content={t("seo.image-alt")} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content=`${title} - whallin.me` />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
<meta property="twitter:image:alt" content={t("seo.image-alt")} />

<!-- Alternate languages -->
<HeadHrefLangs />

<!-- Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-1BZTVZ75RT"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-1BZTVZ75RT');
</script>

<!-- Microsoft Clarity -->
<script type="text/javascript">
  (function(c,l,a,r,i,t,y){
      c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
      t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
      y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
  })(window, document, "clarity", "script", "blzt4x8v9z");
</script>

<!-- Schema Markup -->
<script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Person",
      "name": "William Hallin",
      "url": "https://whallin.me",
      "image": "https://whallin.me/imgs/me.webp",
      "sameAs": [
        "https://twitter.com/w_hallin",
        "https://instagram.com/w_hallinig/",
        "https://youtube.com/channel/UCvQzOdACZ59nxtsXLiF4vwA",
        "https://linkedin.com/in/williamhallin/",
        "https://github.com/whallin",
        "https://whallin.me"
      ],
      "jobTitle": "Freelancer",
      "worksFor": {
        "@type": "Organization",
        "name": "William Hallin Multimedia"
      }  
    }
</script>